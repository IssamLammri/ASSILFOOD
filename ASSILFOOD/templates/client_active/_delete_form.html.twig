<form method="post" action="{{ path('client_active_delete', {'idClient': client_active.idClient}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client_active.idClient) }}">
    <button class="btn">Delete</button>
</form>
